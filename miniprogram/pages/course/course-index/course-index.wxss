.course.ci{}
    .ci.tab-box{text-align:center;padding:50rpx 50rpx 0 50rpx;}
    .ci.tab{font-size:24rpx;padding:10rpx 30rpx;border:1rpx solid #ccc;display:inline-block;box-sizing:border-box;color:#666;}
    .ci.tab:first-child{border-radius:10rpx  0 0 10rpx;border-left:1rpx solid #ccc;}
    .ci.tab:last-child{border-radius:0 10rpx 10rpx 0;border-right:1rpx solid #ccc;}
    .ci.tab-active{border-color:#e9418e;color:#fff;background-color:#e9418e}
    .ci.info_box{width:100%;height:100vh;background-color:#fff;}
    .ci.info_title{margin-bottom:30rpx;}
    .ci.info_line{width:4rpx;height:40rpx;background-color:#e9418e;display:inline-block;margin-right:20rpx;vertical-align:middle;}
    .ci.info_message{font-size:28rpx;color:#666;text-align:justify;text-indent:56rpx;line-height:52rpx;margin-bottom:40rpx;}
    .ci.name{text-align:center;padding:40rpx;color:#666;font-size:40rpx;}
    .ci.name text{font-size:24rpx;}
    .ci.button{background-color:#fff;border-color:#e9418e;color:#e9418e;font-weight:normal;}
    .ci.button:not([size='mini']){border:1rpx solid #e9418e;width:400rpx;}
    .ci.getuser{width:100%;height:240rpx;position:absolute;bottom:0;left:0;opacity:0;}

    .ci.bottom{width:100%;height:240rpx;position:fixed;left:0;bottom:0;background-color:rgba(255,255,255,0.9);border-top:1rpx solid #eee;}
    .ci.navi{width:750rpx;font-size:28rpx;text-align:center;color:#999;}
    .ci.navibtn{color:#e9418e;}
    .ci.info{width:calc(100% - 80rpx);padding:0 40rpx;}
    .ci.navibox{height:120rpx;line-height:120rpx;}
    .ci.info_process{width:100%;text-align:center;position:absolute;top:20%;left:50%;transform:translate(-50%,-20%);opacity:0.8}
    .ci.info_image{width:560rpx;height:560rpx;}
    .ci.info_discribe{width:calc(100% - 80rpx);padding:40rpx;text-indent:52rpx;font-size:26rpx;color:#999;text-align:justify}

    .ci.info_btn{background-color:#e9418e;}

    button:not([size='mini']){font-weight:normal}
