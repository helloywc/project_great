.mask{position: fixed;z-index: 1000;top: 0;right: 0;left: 0;bottom: 0;background: rgba(0, 0, 0, 0.3);}
.dialog{position: fixed;z-index: 5000;width: 80%;max-width: 600rpx;top: 40%;left: 50%;-webkit-transform: translate(-50%, -50%);transform: translate(-50%, -50%);background-color: #FFFFFF;text-align: center;overflow: hidden;border-radius:16rpx;}
.dialog-title{font-size: 18px;padding: 15px 15px 5px;}
.dialog-content{padding: 35rpx 25rpx;font-size: 16px;line-height: 1.3;word-wrap: break-word;word-break: break-all;color: #222222;display:flex;flex-direction:column;justify-content: center;}

.dialog-text{display:flex;flex:1;}
.dialog-footer{display: flex;align-items: center;position: relative;line-height: 45px;font-size: 17px;}
.dialog-footer::before{content: '';position: absolute;left: 0;top: 0;right: 0;height: 1px;border-top: 1px solid #D5D5D6;color: #D5D5D6;-webkit-transform-origin: 0 0;transform-origin: 0 0;-webkit-transform: scaleY(0.5);transform: scaleY(0.5);}
.dialog-btn{display: block;-webkit-flex: 1;flex: 1;-webkit-tap-highlight-color: rgba(0, 0, 0, 0);position: relative;}
.dialog-btn-reverse{color:#fff;background-color:#e95da1}
.dialog-footer .dialog-btn:nth-of-type(1){color: #353535;}
.dialog-footer .dialog-btn:nth-of-type(2){color: #1DD6D1;}
.dialog-footer .dialog-btn:nth-of-type(2):after{content: " ";position: absolute;left: 0;top: 0;width: 1px;bottom: 0;border-left: 1px solid #D5D5D6;color: #D5D5D6;-webkit-transform-origin: 0 0;transform-origin: 0 0;-webkit-transform: scaleX(0.5);transform: scaleX(0.5);}

.dialog-title{padding:30rpx 0;}
.dialog-contact{width:calc(100% - 60rpx);padding:20rpx 30rpx;display:flex;flex-direction:row;align-content:space-between;align-items:center;color:#666;}
.dialog-number{width:30rpx;}
.dialog-image{width:80rpx;height:80rpx;margin:0 20rpx;}
.dialog-tex{width:400rpx;}
.dialog-footer .dialog-btn-reverse:nth-of-type(1){font-weight:normal;color:#fff;}
